@using Ecommerce.Models;
@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";

}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Products List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-info">&nbsp; Add New Product</a>
    </div>
</div>

<br />

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c=>c.Name)
            </th>
            <th>
                @Html.DisplayNameFor(c=>c.Price)
            </th>
            <th>
                @Html.DisplayNameFor(c=>c.IsAvailabe)
            </th>
            <th>
                @Html.DisplayNameFor(c=>c.ProductTypeId)
            </th>
            

            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.IsAvailabe</td>
                <td>@item.ProductTypes.ProductType</td>
                <th></th>
                <td style="width: 150px">
                    <div class="btn-group">
                        <a asp-action="Edit" asp-controller="Products" class="btn btn-primary" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" asp-controller="Products" class="btn btn-success" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-controller="Products" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            var del = '@TempData["del"]'
            if (save != '') {
                alertify.success(save);
            }
            if (del != '') {
                alertify.error(del);
            }
        })
    </script>
}
