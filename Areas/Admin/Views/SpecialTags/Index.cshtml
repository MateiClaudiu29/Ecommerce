@using Ecommerce.Models;
@model IEnumerable<SpecialTags>
@{
    ViewData["Title"]="Index";

}

<br/><br/>

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Special Tags List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-info">&nbsp; New Special Tag</a>
    </div>
</div>

<br/>

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c=>c.SpecialTag)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var item in Model){
            <tr>
                <td>@item.SpecialTag</td>
                <th></th>
                <td style="width: 150px">
                    <div class="btn-group">
                        <a asp-action="Edit" asp-controller="SpecialTags" class="btn btn-primary" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" asp-controller="SpecialTags" class="btn btn-success" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-controller="SpecialTags" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var save= '@TempData["save"]'
            var del= '@TempData["del"]'
            if(save!=''){
                alertify.success(save);
            }
            if(del!='')
            {
                alertify.error(del);
            }
        })    
    </script>
}